---
const url = Astro.url;
let currentPage = "home";
if (url.pathname !== "/") {
    currentPage = url.pathname.substring(1);
}
---

<nav box-="square">
    <a href="/" class="title">
        <span id="laptop"></span>
        <span>mkuritsu</span>
    </a>

    <div class="nav-right">
        <a href="/" data-active={currentPage === "home"}>
            <span id="nf-fa-home"></span>
            <span>Home</span>
        </a>
        <a href="/blog" data-active={currentPage === "blog"}>
            <span id="nf-fa-newspaper"></span>
            <span>Blog</span>
        </a>
        <a href="/projects" data-active={currentPage === "projects"}>
            <span id="nf-fa-diagram_project"></span>
            <span>Projects</span>
        </a>
        <a href="/about" data-active={currentPage === "about"}>
            <span id="nf-oct-person"></span>
            <span>About</span>
        </a>
    </div>
</nav>
<style>
    nav {
        height: 7ch;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 5ch;
    }

    a {
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 1ch;
    }

    .title {
        color: var(--foreground0);
        font-weight: bold;
    }

    .nav-right {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2ch;

        a {
            color: var(--foreground2);
            text-decoration: none;

            &[data-active="true"] {
                color: var(--foreground0);
                text-decoration: underline;
                font-weight: bold;
            }

            &:focus,
            &:hover {
                text-decoration: underline;
            }
        }
    }

    #laptop::before {
        content: "\eea7";
    }
</style>
