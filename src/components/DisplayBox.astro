---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div box-="square" shear-="both" id="root">
    <span is-="badge">{title}</span>
    <div id="content">
        <slot />
    </div>
</div>
<style>
    #root {
        width: 35ch;
        height: 50ch;
    }

    #content {
        padding: 1ch;
        width: 100%;
        height: 100%;
    }
</style>
